<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management System</title>
    <style>
        body {
            font-family: 'Courier New', Courier, monospace;
            background-color: aliceblue;
            padding: clamp(.5rem, 2vw, 2rem);
            display: grid;
            place-content: center;
        }

        *,
        *::after,
        *::before {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        form {
            margin-top: 10px;
        }

        h1 {
            font-size: clamp(2rem, 2vw, 4rem);
            color: rgb(16, 16, 176);
        }


        h2 {
            color: rgb(16, 16, 176);
        }

        button {
            margin-top: 10px;
            padding: .5rem 1rem .5rem 1rem;
            background-color: rgb(10, 163, 20);
            color: aliceblue;
            border: 0;
            font-weight: 600;
            transition: .4s;
        }

        button:hover {
            background-color: aliceblue;
            color: rgb(10, 163, 20);

            outline: 2px solid rgb(10, 163, 20);
        }

        label {
            display: block;
            font-size: 1rem;
            font-weight: 700;
            margin-bottom: .6rem;
        }


        input {
            padding: .5rem;
            border: 2px solid rgb(38, 155, 9);
            color: rgb(183, 101, 7);
            font-weight: 700;
        }

        .form-container {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .form-container>form {
            padding: 1rem;
            flex: 1;
            border: 2px solid rgb(38, 155, 9);
        }

        #book-list li {
            list-style: none;
        }

        #book-list ul {
            display: flex;
        }

        li::before {
            content: "ðŸ“— ";
        }

        table {
            border-collapse: collapse;
        }

        table,
        th,
        td {
            border: 2px solid rgb(38, 155, 9);
        }

        td,
        th {
            padding: .5rem;
        }
    </style>
</head>

<body>
    <div id="app">
        <h1>Library Management System</h1>
        <h2>List Of Books</h2>
        <div id="book-list">
            <table>
                <thead>
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                </thead>
                <tbody>
                    <% formData.forEach(entry=> { %>
                        <tr>
                            <td>
                                <%= entry.title %>
                            </td>
                            <td>
                                <%= entry.author %>
                            </td>
                            <td>
                                <%= entry.isbn %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
        <div class="form-container">
            <form id="add-book-form" action="/add" method="post">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" required>
                <label for="isbn">ISBN:</label>
                <input type="text" id="isbn" name="isbn" required>
                <button type="submit">Add Book</button>
            </form>
            <form id="remove-book-form" action="/deletedata" method="post">
                <label for="isbn">Remove Book by ISBN:</label>
                <input type="text" id="isbn" name="isbn" required>
                <button type="submit">Remove Book</button>
            </form>
        </div>
    </div>
    <script src="app.js"></script>
</body>

</html>